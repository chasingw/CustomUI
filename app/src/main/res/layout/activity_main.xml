<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robosense.customui.MainActivity">

    <Button
        android:id="@+id/btn_navi"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="navigation"
        tools:layout_editor_absoluteX="8dp" tools:layout_editor_absoluteY="0dp"/>
    <com.robosense.customui.MySeekBar
        android:id="@+id/mySeekBar"
        android:layout_width="368dp"
        android:layout_height="30dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">
    </com.robosense.customui.MySeekBar>
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:thumb="@mipmap/ic_launcher_round"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mySeekBar"/>
    <Button
        android:id="@+id/btn_customer_calculator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="自定义日历"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/seekBar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_filter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="filter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/btn_customer_calculator"/>
</android.support.constraint.ConstraintLayout>
